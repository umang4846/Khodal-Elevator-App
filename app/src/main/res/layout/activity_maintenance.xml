<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_map"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/alice"
                android:text="Maintenance :"
                android:textColor="#21a"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_maintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="3sp"
                android:text="To provide better service to our customer 24 x 7 hour. Our technicians periodically go to lifts installed by our company and check all the factors of lift including working condition of parts ,running condition of lift , examination of safety devices and other technical aspects. Assurance of getting help when most needed."
                android:textColor="@color/blackPrimaryDark"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_maintenance_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:fb_defaultColor="@color/bluePrimaryDark"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_focusColor="@color/bluePrimary"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="MAINTENANCE FORM"
                fancy:fb_textSize="20sp" />

        </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#aaa"
                android:padding="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_map"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/alice"
                android:text="Services :"
                android:textColor="#21a"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="3sp"
                android:text='We work for customer satisfaction, usersâ€™ safety and reliability greatly. Our motto is "An Elevator Lift up Your Life". We escalate your life style by providing world class and advanced technology products in the field of elevator.  We have research team that works on customers queries and incorporate changes in designing, manufacturing and dispatching of product to have maintenance free product development.  We take customers complain as a challenge and solve it with in quick time and we proud that we are best in customer satisfaction. Our service technicians are equipped with latest equipment and advanced technology and they are certified that makes us to prepare world class product.'
                android:textColor="@color/blackPrimaryDark"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:fb_defaultColor="@color/bluePrimaryDark"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_focusColor="@color/bluePrimary"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="SERVICE GENERAL FORM"
                fancy:fb_textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#aaa"
            android:padding="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_map"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/alice"
                android:text="Benefits of Modernization :"
                android:textColor="#21a"
                android:textSize="22sp" />

            <com.mukesh.MarkdownView
                android:id="@+id/markdown_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="10dp" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_MODERNIZATION_FORM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:fb_defaultColor="@color/bluePrimaryDark"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_focusColor="@color/bluePrimary"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="MODERNIZATION FORM"
                fancy:fb_textSize="20sp" />

        </LinearLayout>

        </LinearLayout>
</ScrollView>